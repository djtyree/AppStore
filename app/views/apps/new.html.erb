<%= form_for(@app) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :title, placeholder: "Title" %>
  </div>
  <div class="field">
    <%= f.text_area :description, placeholder: "Describe your app..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>